{
  "name": "@scaffold-eth/monorepo",
  "version": "0.1.0-beta02",
  "keywords": [
    "ethereum",
    "react",
    "uniswap",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "build-ts": "yarn workspace @scaffold-eth/vite-app-ts build-ts --max-old-space-size=12288",
    "chain-ts": "yarn workspace @scaffold-eth/hardhat-ts chain-ts",
    "fork-ts": "yarn workspace @scaffold-eth/hardhat-ts fork-ts",
    "node-ts": "yarn workspace @scaffold-eth/hardhat-ts chain-ts",
    "test-ts": "yarn workspace @scaffold-eth/hardhat-ts test-ts",
    "start-ts": "yarn workspace @scaffold-eth/vite-app-ts start-ts",
    "compile-ts": "yarn workspace @scaffold-eth/hardhat-ts compile-ts",
    "deploy-ts": "yarn workspace @scaffold-eth/hardhat-ts deploy-ts",
    "watch-ts": "yarn workspace @scaffold-eth/hardhat-ts watch-ts",
    "accounts-ts": "yarn workspace @scaffold-eth/hardhat-ts accounts-ts",
    "balance-ts": "yarn workspace @scaffold-eth/hardhat-ts balance-ts",
    "send-ts": "yarn workspace @scaffold-eth/hardhat-ts send-ts",
    "ipfs-ts": "yarn workspace @scaffold-eth/vite-app-ts ipfs-ts",
    "surge-ts": "yarn workspace @scaffold-eth/vite-app-ts surge-ts",
    "s3-ts": "yarn workspace @scaffold-eth/vite-app-ts s3-ts",
    "ship-ts": "yarn workspace @scaffold-eth/vite-app-ts ship-ts",
    "generate-ts": "yarn workspace @scaffold-eth/hardhat-ts generate-ts",
    "account-ts": "yarn workspace @scaffold-eth/hardhat-ts account-ts",
    "mine-ts": "cd packages/hardhat-ts && npx hardhat mine-ts",
    "wallet-ts": "cd packages/hardhat-ts && npx hardhat wallet-ts",
    "fundedwallet-ts": "cd packages/hardhat-ts && npx hardhat fundedwallet-ts",
    "flatten-ts": "cd packages/hardhat-ts && npx hardhat flatten-ts",
    "clean-ts": "cd packages/hardhat-ts && npx hardhat clean-ts",
    "run-graph-node": "yarn workspace @scaffold-eth/services run-graph-node",
    "remove-graph-node": "yarn workspace @scaffold-eth/services remove-graph-node",
    "clean-graph-node": "yarn workspace @scaffold-eth/services clean-graph-node",
    "graph-prepare": "mustache packages/subgraph/config/config.json packages/subgraph/src/subgraph.template.yaml > packages/subgraph/subgraph.yaml",
    "graph-codegen": "yarn workspace @scaffold-eth/subgraph graph codegen",
    "graph-build": "yarn workspace @scaffold-eth/subgraph graph build",
    "graph-create-local": "yarn workspace @scaffold-eth/subgraph graph create --node http://localhost:8020/ scaffold-eth/your-contract",
    "graph-remove-local": "yarn workspace @scaffold-eth/subgraph graph remove --node http://localhost:8020/ scaffold-eth/your-contract",
    "graph-deploy-local": "yarn workspace @scaffold-eth/subgraph graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 scaffold-eth/your-contract",
    "graph-ship-local": "yarn graph-prepare && yarn graph-codegen && yarn graph-deploy-local",
    "deploy-and-graph": "yarn deploy && yarn graph-ship-local",
    "theme": "yarn workspace @scaffold-eth/react-app theme",
    "watch-theme": "yarn workspace @scaffold-eth/react-app watch"
  },
  "workspaces": {
    "packages": [
      "packages/hardhat-ts",
      "packages/vite-app-ts",
      "packages/services/*",
      "packages/subgraph"
    ],
    "nohoist": [
      "**/@graphprotocol/graph-ts",
      "**/@graphprotocol/graph-ts/**",
      "**/hardhat",
      "**/hardhat/**",
      "**/hardhat-ts",
      "**/hardhat-ts/**"
    ]
  },
  "dependencies": {}
}
